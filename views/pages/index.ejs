<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AlbsigBay - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="style.css"/>
</head>
<body>
<%- include('../components/nav', {page: 'home'}) %>
<main class="container">
    <div class="mt-3">
        <h1 class="display-1">Herzlich Willkommen</h1>
        <p class="display-5">auf der Homepage der Bücherei AlbsigBay</p>
        <form autocomplete="off" action="">
            <div class="input-group col-md-4">
                <input class="form-control py-2 border-right-0 border" type="search" placeholder="Search..."
                       id="search">
                <button class="btn btn-outline-secondary border-left-0 border" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </form>
    </div>
    <% if ((typeof categories !== 'undefined') || (typeof books !== 'undefined')) { %>
        <div class="row mt-5">
            <div class="col-2">
                Kategorien
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-auto col-xs-12">
                        <% categories.forEach(function(category) { %>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">/
                                        <a href="/books/cat/<%= category.category.toLowerCase() %>">
                                            <%= category.category.toUpperCase() %>
                                        </a>
                                    </li>
                                </ol>
                            </nav>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="col-10">
                <div id="books" class="container">
                    <% books.forEach(function(book) { %>
                        <div class="card mb-3">
                            <div class="row mt-3 mb-3">
                                <div class="col-2 mr-3 col-xs-12">
                                    <a href="/book/<%= book.id %>">
                                        <img src="/public/books/covers/<%= book.cover %>" width="200px"
                                             height="auto" alt="<%= book.title %>">
                                    </a>
                                </div>
                                <div class="col-9 col-xs-12 ms-1 me-0 ps-5 pe-0">
                                    <div class="card-block px-2">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4 class="card-title" id="title">
                                                    <a href="/book/<%= book.id %>"><%= book.title %></a>
                                                </h4>
                                            </div>
                                            <div class="col-12 mt-3">
                                                <p class="card-text" style="text-align: justify"
                                                   id="description"><%= book.description %></p>
                                            </div>
                                            <div class="col mt-3 mb-3">
                                                <span id="author"><%= book.author %></span>
                                                <span id="isbn"><%= book.isbn %></span>
                                                <span id="publicationDate"><%= book.publicationDate %></span>
                                                <span id="vendor"><%= book.vendor %></span>
                                                <span id="category"><%= book.category %></span>
                                                <span id="pages"><%= book.pages %></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-8">
                                                <a href="/book/<%= book.id %>" class="btn btn-primary">Mehr...</a>
                                            </div>
                                            <div class="col-4 align-self-end">
                                                <% if (book.borrowedDate) { %>
                                                    <span class="btn btn-danger">Nicht Verfügbar</span>
                                                <% } else { %>
                                                    <a href="/book/borrow/<%= book.id %>" class="btn btn-success">Verfügbar</a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row mt-3">
            <h1>Keine Suchergebnisse...</h1>
        </div>
    <% } %>
</main>
<script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@0.21.1/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    window.onload = () => {
        // set focus after load on search
        document.getElementById('search').focus();

        // get last url segment as search value
        // e.g.: http://localhost:3000/search/python -> "python" as search query
        let url = window.location.href;
        document.querySelector('#search').value = decodeURIComponent(url.substring(url.lastIndexOf('/') + 1));

        // debounce input search
        const bookSearch = _.debounce(function () {
            let searchQuery = document.querySelector('#search').value;
            let searchUrl = 'http://localhost:3000/search/' + encodeURIComponent(searchQuery);
            window.location.replace(searchUrl);
        }, 500);

        window.addEventListener('input', bookSearch);
    }
</script>
</body>
</html>
